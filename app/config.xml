<?xml version='1.0' encoding='utf-8'?>
<widget android-packageName="de.holisticon.app.flynn" id="de.holisticon.app.flynnBookScanner" ios-CFBundleIdentifier="de.holisticon.app.flynn" version="1.7.1" xmlns="http://www.w3.org/ns/widgets">
    <name>Flynn</name>
    <description>
    flynn book scanner app
    </description>
    <author email="info@holisticon.de" href="https://holisticon.de">
      Holisticon AG
    </author>
    <content src="index.html" />
    <access origin="*" />
    <platform name="ios">
        <preference name="Orientation" value="all" />
    </platform>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashScreen" value="etc/splash.png" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="xwalkVersion" value="xwalk_core_library:22+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <plugin name="it.innowatio.cordova.ios-fullscreen" spec="https://github.com/innowatio/cordova-ios-fullscreen.git" />
    <plugin name="cordova-plugin-device" spec="~1.1.4" />
    <plugin name="cordova-plugin-ios-no-export-compliance" spec="https://github.com/mikaoelitiana/cordova-plugin-ios-no-export-compliance.git" />
    <plugin name="cordova-plugin-document-viewer" spec="~0.5.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
    <plugin name="cordova-plugin-file" spec="~4.3.0" />
    <plugin name="cordova-plugin-urlhandler" spec="~0.7.0">
        <variable name="URL_SCHEME" value="flynnApp" />
    </plugin>
    <plugin name="cordova-plugin-sqlite-2" spec="~1.0.4" />
    <plugin name="cordova-sqlite-ext" spec="~0.10.4" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.1.0">
        <variable name="XWALK_VERSION" value="21+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
    <plugin name="cordova-plugin-barcodescanner" spec="~0.7.0" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
    <plugin name="ionic-plugin-keyboard" spec="~2.2.1" />
    <plugin name="cordova-plugin-ios-camera-permissions" spec="~1.1.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="your usage message" />
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="your microphone usage message here" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="your photo library usage message here" />
    </plugin>
</widget>
